.my-4
  h1 Коллективный блог
  .row

    - @posts.each do |post|
      .col-md-12.card.mb-3.card-body
        h2.h5.card-title
          = link_to post.title, post_path(post), class: 'link-dark text-decoration-none'
        - if post.body.length > 200
          .card-text.mb-2
            = "#{post.body[0, 197]}..."
        - else
          .card-text.mb-2
            = post.body

        .text-right.small.text-muted.mt-auto
          span.me-2
            = "#{t('.likes')}: #{post.likes.count}"
          span.me-2
            = time_ago_in_words(post.created_at)
          span
            = post.creator.email
